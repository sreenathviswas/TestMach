extends layout

block content
  h1= title 
  if(ruleName)
   p #{ruleName[0]}
  form(action='/',method='post')
   fieldset(data-role='controlgroup')
    span
     label(for='title') Title
    span     
     select(name='title')
      each title in ['Select', 'Mr', 'Mrs', 'Miss']
       option(value=title,  selected=model.title==title) #{title}
   fieldset(data-role='controlgroup')
    span
     label(for='firstName') First Name
    span
     input(type='text', name='firstName' value=model.firstName)
   fieldset(data-role='controlgroup')
    span
     label(for='lastName') Last Name
    span
     input(type='text', name='lastName' value=model.lastName)
   p
   input(type='submit', value='Send')
   script.
    console.log('model', !{JSON.stringify(model)}, 'rule', !{JSON.stringify(model)});
